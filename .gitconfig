[include]
    path = /home/anakim/Documents/repos/delta/themes.gitconfig
[init]
    defaultBranch = main
[core]
    pager = delta

[interactive]
    diffFilter = delta

[delta]
    navigate = true    # use n and N to move between diff sections
    # line-numbers = true
    # delta detects terminal colors automatically; set one of these to disable auto-detection
    dark = true
    # light = true
    features = collared-trogon
    side-by-side = true
[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
